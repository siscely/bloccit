<html>
   <head>
     <meta content="text/html; charset=UTF-8" http-equiv="Content-Type" />
   </head>
   <body>
     <h1>New favorite to "<%= @post.title %>"</h1>
     <small>
       By: <%= @post.user.name %>
     </small>
     <p>
       <%= @post.body %>
     </p>
     <p>
 
       <%= link_to "View favorite on site", topic_post_url(@post.topic, @post, anchor: "favorite-#{@post.id}") %>
     </p>
   </body>
 </html>